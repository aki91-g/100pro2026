{
  "name": "100pro2026-devcontainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/devcontainer",
  "workspaceMount": "source=${localWorkspaceFolder},target=/devcontainer,type=bind,consistency=cached",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "pnpmVersion": "latest"
    }
  },
  "containerEnv": {
    "CARGO_HOME": "/home/vscode/.cargo",
    "RUSTUP_HOME": "/home/vscode/.rustup"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tauri-apps.tauri-vscode",
        "vue.volar",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "irongeek.vscode-env",
        "tamasfe.even-better-toml",
        "mhutchie.git-graph",
        "eamodio.gitlens",
        "christian-kohler.path-intellisense"
      ]
    }
  }
}